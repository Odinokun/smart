extends ../_template

block variables
  - var title = 'SMART Life'

block content
  .main-wrap.no-js
    include ../sections/header
    include ../sections/subheader

    //begin content
    main.main
      .page-header
        .container
          h2.title-48.page-header__title Пошук

      .container
        //begin search
        .search
          //begin search__form.search-form
          form.search__form.search-form
            input.search-form__input(type='search' placeholder='Пошуковий текст')
            button.search-form__btn
              +svg('search')
          //end search__form.search-form

          //begin search__result
          .search__result.search-result
            .search-result__text Кількість результатів пошуку:
            .search-result__numb 13
          //end search__result
        //end search

    //end content

    include ../sections/footer
    include ../sections/scripts
    script.
      function initMap() {
        let windowWidth = document.documentElement.clientWidth;
        let myLatLng = {lat: 49.7946105662072, lng: 24.05389071216973};

        let map = new google.maps.Map(document.getElementById('map-sm'), {
          zoom: 17,
          center: myLatLng,
          styles: []
        });
        let marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'SMART Life',
          icon: 'assets/img/marker.svg'
        });
      }
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAdGbaaf94NCuCkoH98Ry12HA59U0eTqIA&callback=initMap")
